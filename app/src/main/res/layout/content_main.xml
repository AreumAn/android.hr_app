<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.areum.myassignmentandroid.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:text="Hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/textView6"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignStart="@+id/textView7"
        android:id="@+id/textView8"
        tools:ignore="HardcodedText" />

    <TextView
        android:text="School Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/textView9"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        tools:ignore="HardcodedText" />

    <TextView
        android:text="Make"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"
        android:id="@+id/textView10"
        tools:ignore="HardcodedText" />

    <TextView
        android:text="Plate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView10"
        android:layout_alignStart="@+id/textView8"
        android:id="@+id/textView11"
        tools:ignore="HardcodedText" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Enter your name"
        android:ems="10"
        android:id="@+id/txtName"
        android:textSize="14sp"
        tools:ignore="HardcodedText,LabelFor"
        android:layout_width="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toEndOf="@+id/btnAdd" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Enter your age"
        android:ems="10"
        android:id="@+id/txtAge"
        android:textSize="14sp"
        tools:ignore="HardcodedText,LabelFor"
        android:layout_below="@+id/txtName"
        android:layout_alignStart="@+id/txtName" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Bonus"
        android:ems="10"
        android:id="@+id/txtBonus"
        tools:ignore="HardcodedText,LabelFor"
        android:textSize="14sp"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Hours"
        android:ems="10"
        android:id="@+id/txtHours"
        android:textSize="14sp"
        tools:ignore="HardcodedText,LabelFor"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignStart="@+id/txtSalary" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Rate"
        android:ems="10"
        android:id="@+id/txtRate"
        tools:ignore="HardcodedText,LabelFor"
        android:textSize="14sp"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="@string/enter_your_school_name"
        android:ems="10"
        android:id="@+id/txtSchoolName"
        android:textSize="14sp"
        tools:ignore="LabelFor"
        android:layout_alignBaseline="@+id/textView9"
        android:layout_alignBottom="@+id/textView9"
        android:layout_toEndOf="@+id/textView9"
        android:layout_marginStart="14dp"
        android:layout_width="250dp" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Make"
        android:ems="10"
        android:id="@+id/txtMake"
        android:textSize="14sp"
        tools:ignore="HardcodedText,LabelFor"
        android:layout_alignBaseline="@+id/textView11"
        android:layout_alignBottom="@+id/textView11"
        android:layout_alignStart="@+id/txtHours" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="@string/plate"
        android:ems="10"
        android:id="@+id/txtPlate"
        android:textSize="14sp"
        tools:ignore="LabelFor"
        android:layout_alignBaseline="@+id/textView11"
        android:layout_alignBottom="@+id/textView11"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Search"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnSearch"
        tools:ignore="HardcodedText"
        android:onClick="btnSearchControl"
        android:layout_alignBaseline="@+id/btnAdd"
        android:layout_alignBottom="@+id/btnAdd"
        android:layout_toEndOf="@+id/textView9" />

    <Button
        android:text="CLEAR"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnClear"
        tools:ignore="HardcodedText"
        android:onClick="btnClearControl"
        android:layout_alignBaseline="@+id/btnUpdate"
        android:layout_alignBottom="@+id/btnUpdate"
        android:layout_alignParentEnd="true" />


    <Button
        android:text="ADD"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnAdd"
        tools:ignore="HardcodedText"
        android:onClick="btnAddControl"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/txtMake"
        android:layout_alignParentStart="true" />

    <Button
        android:text="SHOW ALL EMPLOYEE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSearch"
        android:layout_alignParentStart="true"
        android:onClick="btnShowListControl"
        android:id="@+id/btnList"
        tools:ignore="HardcodedText" />

    <TextView
        android:text="NAME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        tools:ignore="HardcodedText"
        android:layout_marginTop="26dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="COUNTRY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        tools:ignore="HardcodedText"
        android:layout_alignBaseline="@+id/txtCountry"
        android:layout_alignBottom="@+id/txtCountry"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Select your Country"
        android:ems="10"
        android:id="@+id/txtCountry"
        android:textSize="14sp"
        tools:ignore="HardcodedText,LabelFor"
        android:layout_below="@+id/txtAge"
        android:layout_alignStart="@+id/txtAge" />

    <TextView
        android:text="BIRTHDAY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        tools:ignore="HardcodedText"
        android:layout_alignBaseline="@+id/txtAge"
        android:layout_alignBottom="@+id/txtAge"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Salary"
        android:ems="10"
        android:id="@+id/txtSalary"
        tools:ignore="HardcodedText,LabelFor"
        android:textSize="14sp"
        android:layout_width="100dp"
        android:enabled="true"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignEnd="@+id/btnList" />

    <TextView
        android:text="Salary"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:id="@+id/textView5"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/txtCountry"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Select your type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSelectType"
        tools:ignore="HardcodedText"
        android:onClick="DialogSelectOption"
        android:layout_below="@+id/txtCountry"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Bonus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        tools:ignore="HardcodedText"
        android:layout_alignBaseline="@+id/txtSalary"
        android:layout_alignBottom="@+id/txtSalary"
        android:layout_toEndOf="@+id/txtSalary"
        android:layout_marginStart="13dp" />

    <Button
        android:text="CHOOSE"
        android:layout_height="wrap_content"
        android:id="@+id/btnBirth"
        tools:ignore="HardcodedText"
        android:onClick="btnChooseBirth"
        android:layout_width="80dp"
        android:layout_below="@+id/textView2"
        android:layout_toEndOf="@+id/txtName" />

    <Button
        android:text="UPDATE"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnUpdate"
        tools:ignore="HardcodedText"
        android:onClick="btnUpdateControl"
        android:layout_above="@+id/btnList"
        android:layout_toStartOf="@+id/btnClear" />

    <Button
        android:text="CAL"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnCalculate"
        tools:ignore="HardcodedText"
        android:textSize="14sp"
        android:onClick="btnCalculate"
        android:layout_below="@+id/btnClear"
        android:layout_alignStart="@+id/btnUpdate" />

    <Button
        android:text="AGE"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnClear"
        android:layout_toEndOf="@+id/btnUpdate"
        android:onClick="btnAgeCalculate"
        android:id="@+id/btnAgeCal"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:id="@+id/tvMainView"
        tools:ignore="HardcodedText"
        android:layout_width="350dp"
        android:textColor="@color/colorAccent"
        android:textAlignment="viewStart"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/btnAgeCal" />

</RelativeLayout>
